<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_11"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tasbeeh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/displayView"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:background="@drawable/count_bg"
            android:gravity="center_vertical"
            android:paddingEnd="12dp"
            android:text="0"
            android:textSize="56sp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@id/appUI"
            app:layout_constraintEnd_toEndOf="@id/appUI"
            app:layout_constraintStart_toStartOf="@id/appUI"
            app:layout_constraintTop_toTopOf="@id/appUI"
            app:layout_constraintVertical_bias=".27"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/incrementBtn"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:text=""
            android:background="@drawable/count_btn_bg"
            android:fontFamily="@font/quicksand_light"
            app:layout_constraintBottom_toBottomOf="@id/appUI"
            app:layout_constraintEnd_toEndOf="@id/appUI"
            app:layout_constraintStart_toStartOf="@id/appUI"
            app:layout_constraintTop_toTopOf="@id/appUI"
            app:layout_constraintVertical_bias=".699" />

        <ImageButton
            android:id="@+id/restartBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/count_btn_bg"
            android:src="@drawable/ic_restart"
            android:foregroundGravity="center"
            app:layout_constraintTop_toTopOf="@id/appUI"
            app:layout_constraintEnd_toEndOf="@id/appUI"
            app:layout_constraintStart_toStartOf="@id/appUI"
            app:layout_constraintBottom_toBottomOf="@id/appUI"
            app:layout_constraintHorizontal_bias=".71"
            app:layout_constraintVertical_bias=".463"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:fontFamily="@font/quicksand_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />




</androidx.constraintlayout.widget.ConstraintLayout>